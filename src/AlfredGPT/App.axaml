<Application
  x:Class="AlfredGPT.App" xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:shadui="clr-namespace:ShadUI.Controls;assembly=ShadUI">

  <Application.Styles>
    <shadui:ShadTheme/>
    <StyleInclude Source="avares://LiveMarkdown.Avalonia/Styles.axaml"/>
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <LocaleManager/>
        <ResourceInclude Source="avares://AlfredGPT/Assets/Resources.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Assets/DataTemplates.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/ChatInputBox.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/ChatActionBubble.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/ConsentDecisionCard.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/IconEditor.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/IconPresenter.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/SettingsItemsControl.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/TextDifferenceEditor.axaml"/>
        <ResourceInclude Source="avares://AlfredGPT/Views/Controls/TextDifferenceSummaryView.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <TrayIcon.Icons>
    <TrayIcons>
      <TrayIcon
        Clicked="HandleOpenMainWindowMenuItemClicked" Icon="avares://AlfredGPT/Assets/AlfredGPT.ico"
        ToolTipText="AlfredGPT">
        <TrayIcon.Menu>
          <NativeMenu>
            <NativeMenuItem
              Click="HandleOpenMainWindowMenuItemClicked"
              Header="{I18N {x:Static LocaleKey.Application_TrayIcon_Menu_OpenMainWindow}}"/>
            <NativeMenuItem
              Click="HandleOpenDebugWindowMenuItemClicked"
              Header="{I18N {x:Static LocaleKey.Application_TrayIcon_Menu_OpenDebugWindow}}"/>
            <NativeMenuItemSeparator/>
            <NativeMenuItem
              Click="HandleExitMenuItemClicked"
              Header="{I18N {x:Static LocaleKey.Application_TrayIcon_Menu_Exit}}"/>
          </NativeMenu>
        </TrayIcon.Menu>
      </TrayIcon>
    </TrayIcons>
  </TrayIcon.Icons>
</Application>